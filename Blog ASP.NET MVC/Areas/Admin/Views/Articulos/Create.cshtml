@model BlogCore.Models.ViewModels.ArticuloVM

@{
    ViewData["Title"] = "Crear Articulo";
}

<br />
<br />

<h3 class="text-center">Crear una nuevo articulo</h3>
<form method="POST" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Articulo.Nombre"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Articulo.Nombre" class="form-control" placeholder="Ingrese el nombre de la categoria" />
                    <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-6">
                        <label asp-for="Articulo.Descripcion"></label>
                    </label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Articulo.Descripcion" class="form-control" style="height:300px;" > </textarea>
                    <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-4">
                    <label class="col-6">
                        <label asp-for="Articulo.CategoriaId"></label>
                    </label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Articulo.CategoriaId,Model.ListaCategorias,"Por favor Seleccione una categoria",new{@class="form-control"})
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-6">
                        <label asp-for="Articulo.UrlImagen"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control"/>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/ylb9nxsinfgr39zp0reaxm8kh21db9l3aj98j90k6aghjtkd/tinymce/6/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector:'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}